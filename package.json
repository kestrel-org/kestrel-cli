{
  "name": "kli-cli",
  "version": "1.2.6",
  "description": "kc CLI",
  "bin": {
    "kc": "bin/kc"
  },
  "scripts": {
    "format": "prettier --write **/*.{js,json} && standard --fix",
    "lint": "standard",
    "test": "jest __tests__",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "src",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ngx-template/kli-cli.git"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "dotenv": "^10.0.0",
    "gluegun": "latest",
    "ora": "^4.1.1",
    "prompts": "^2.4.1"
  },
  "devDependencies": {
    "jest": "^27.2.0",
    "prettier": "^2.4.0",
    "standard": "^16.0.4"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
